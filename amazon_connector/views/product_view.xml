<odoo>
		<!-- Amazon Category views -->

		<record id="amazon_product_category_from_view" model="ir.ui.view">
			<field name="name">amazon.product.category.from.view</field>
			<field name="model">product.category</field>
			<field name="arch" type="xml">
				<form string="Category">
					<div class="oe_title">
						<label for="name" string="Category name" class="oe_edit_only" />
						<h1>
							<field name="name" placeholder="eg. Tricycle" />
						</h1>
					</div>
					<group name="first" col="4" string="Category Type">
						<field name="parent_id" domain="[('amazon_category', '=', True)]" />
						<!-- <field name="type" /> -->
					</group>
					<group name="Amazon Information">
						<field name="amazon_category" readonly="4"></field>
						<field name="amazon_cat_id" readonly="4"></field>
					</group>
					<group name="shops" string="Shops">
						<field name="shop_ids" nolabel="1" colspan="4"/>
					</group>
				</form>
			</field>
		</record>
		
		<record id="amazon_product_category_tree_view" model="ir.ui.view">
			<field name="name">amazon.product.category.tree.view</field>
			<field name="model">product.category</field>
			<field name="arch" type="xml">
				<tree string="Category">
					<field name="display_name" />
					<field name="amazon_category" />
					<field name="amazon_cat_id" />
				</tree>
			</field>
		</record>

		<record id="amazon_product_category_search_view" model="ir.ui.view">
			<field name="name">amazon.product.category.search.view</field>
			<field name="model">product.category</field>
			<field name="arch" type="xml">
				<search string="Category">
					<field name="name" />
				</search>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="amazon_action_product_category_action">
			<field name="name">Amazon Category</field>
			<field name="res_model">product.category</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('amazon_category', '=', True)]</field>
			<field name="search_view_id"
				ref="amazon_connector.amazon_product_category_search_view" />
		</record>

		<record model="ir.actions.act_window.view" id="amazon_action_product_category_tree_view">
			<field name="sequence" eval="1" />
			<field name="view_mode">tree</field>
			<field name="view_id"
				ref="amazon_connector.amazon_product_category_tree_view" />
			<field name="act_window_id"
				ref="amazon_connector.amazon_action_product_category_action" />
		</record>

		<record model="ir.actions.act_window.view" id="amazon_action_product_category_form_view">
			<field name="sequence" eval="2" />
			<field name="view_mode">form</field>
			<field name="view_id"
				ref="amazon_connector.amazon_product_category_from_view" />
			<field name="act_window_id"
				ref="amazon_connector.amazon_action_product_category_action" />
		</record>
		<record id="view_amazon_product_template_form" model="ir.ui.view">
			<field name="name">product.amazon.form.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view" />
			<field name="arch" type="xml">
				<header>
					<button name="ExportUpdateProduct" type="object" string="ExportUpdate"/>
				</header>
				<xpath expr="//div[@name='options']" position="inside">
						<div>
							<field name="amazon_product"/>
							<label for="amazon_product" />
							<field name="amazon_export"/>
							<label for="amazon_export" />
						</div>
				</xpath>
				<xpath expr="//field[@name='currency_id']" position="inside">
					<field name="feature" />
				</xpath>
				<xpath expr="//field[@name='default_code']" position="before">
					<field name="standard_temp_product" />
				</xpath>
				<xpath expr="//field[@name='attribute_line_ids']" position="before">
					<field name="variationtheme" attrs="{'required':[('attribute_line_ids','!=',[]),('amazon_export','=',True)]}"/>
				</xpath>
				<xpath expr="//field[@name='default_code']" position="after">
					<field name="amazon_sku"/>
					<field name="amazon_fba_sku"/>
					<field name="tmp_asin"  attrs="{'invisible':[('standard_temp_product','!=','ASIN')]}"/>
					<field name="upc_temp" attrs="{'invisible':[('standard_temp_product','!=','UPC')]}"/>
					<field name="isbn_temp" attrs="{'invisible':[('standard_temp_product','!=','ISBN')]}"/>
					<field name="ean_barcode" attrs="{'invisible':[('standard_temp_product','!=','EAN')]}"/>
				</xpath>
				<xpath expr="//page" position="after">
					<page string="Amazon Information" attrs="{'invisible':[('amazon_product','=',False)]}">
						<notebook>
							<page string="Amazon Attributes">
								<form string="Product Attribtes">
									<group col="4">
										<field name="amazon_categ_id" domain="[('amazon_category','=',True)]"/>
										<field name="tem_standard_price"/>
										<field name="is_prime" />
										<field name="fulfillment_by" />
										<!-- <field name="amazon_price" /> -->
										<field name="label" />
										<field name="product_type_name" />
										<field name="color" />
										<!-- <field name="binding"/> -->
										<field name="brand_name" />
										<field name="studio" />
										<field name="amazon_manufacturer" />
										<!-- <field name="manufacturer_part" /> -->
										<field name="publisher" />
										<field name="package_quantity" />
										<separator colspan="4" string="Product Dimension" />
										<field name="item_dimension_weight" />
										<field name="package_dimension_length" />
										<field name="package_dimension_width" />
										<field name="package_dimension_weight" />
										<field name="package_dimension_height" />
										<separator colspan="4" string="Product Image Dimensions" />
										<field name="small_image_url" />
										<field name="small_image_height" />
										<field name="small_image_width" />
										</group>
										<group>
										<field name="item_type" attrs="{'required':[('amazon_export','=',True)]}"/>
										<field name="bullet_point">
											<tree editable="bottom">
													<field name="bullet"/>
											</tree>
										</field>
										<field name="search_keywords">
											<tree editable="bottom">
												<field name="searchterm"/>
											</tree>
										</field>
									</group>
								</form>
							</page>
							<!-- <page string="Amazon Product Listing">
								<form string="Product Attribtes">
									<separator colspan="4" string="Product Listing" />
									<field name="amazon_prodlisting_ids"
										context="{'default_product_id': active_id,'new_lstn': True}" />
								</form>
							</page> -->
							<!-- <page name="shop_prices" string="Prices">
								<field name="product_shop_price_ids" nolable="1" position="after">
									<tree>	
										<field name="shop_id" />
										<field name="price" />
									</tree>
								</field>
							</page> -->
						</notebook>
					</page>
				</xpath>
			</field>
		</record>

		<record id="view_amazon_product_template_filter" model="ir.ui.view">
			<field name="name">product.template.list</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_search_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
					<filter name="prime_group" string="Prime Product" domain="[('is_prime','=',True)]"/>
				</xpath>
			</field>
		</record>

		<!-- Product Form View -->
		<record id="view_amazon_product_product_form" model="ir.ui.view">
			<field name="name">product.amazon.form.inherit</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_normal_form_view" />
			<field name="arch" type="xml">
				<div name="button_box" position="inside">
