						<field string="Logs" name="amazon_product_model_count"
							widget="statinfo" />
					</button>
				</div>
				<!-- <xpath expr="//field[@name='default_code']" position="before">
					<field name="standard_temp_product" />
				</xpath> -->
				<xpath expr="//field[@name='lst_price']" position="before">
					<field name="asin" />
					<!-- <field name="amazon_sku" invisible="1"/> -->
					<field name="amazon_afn_sku"/>
					<!-- <field name="ean_barcode" attrs="{'invisible':[('standard_temp_product','!=','EAN')]}"/> -->
					<field name="upc"/>
					<!-- <field name="isbn" attrs="{'invisible':[('standard_temp_product','!=','ISBN')]}"/> -->
				</xpath>
			
				<xpath expr="//page[1]" position="after">
					<page string="Amazon Information">
						<notebook>
							<page string="Amazon Attributes">
								<form string="Product Attribtes">
									<group col="4">
										<field name="amazon_categ_id" domain="[('amazon_category','=',True)]"/>
										<field name="amazon_standard_price" />
										<field name="amazon_fba_price" />
										<field name="label" />
										<field name="is_prime" />
										<field name="fulfillment_channel" />
										<field name="product_type_name" />
										<field name="color" />
										<!-- <field name="style_name"/> -->
										<field name="brand_name"/>
										<field name="studio" />
										<!-- <field name="variationtheme" string="select VariationTheme"/> -->
										<field name="amazon_manufacturer" />
										<!-- <field name="manufacturer_part" /> -->
										<field name="publisher" />
										<field name="package_quantity" />
										<separator colspan="4" string="Product Dimension" />
										<field name="item_dimension_weight"/>
										<field name="package_dimension_length"/>
										<field name="package_dimension_width" />
										<field name="package_dimension_weight" />
										<field name="package_dimension_height" />
										<field name="shipping_weight" />
										<field name="shipping_weight_uom" />
										<separator colspan="4" string="Product Image Dimensions" />
										<field name="small_image_url" />
										<field name="small_image_height" />
										<field name="small_image_width" />
										<!-- <field name="item_type" attrs="{'required':[('amazon_export','=',True)]}"/> -->
										<!-- <separator colspan="4" string="Material Type" /> -->
										<!-- <field name="material_type"/> -->
									</group>
								</form>
							</page>
							<!-- <page string="Amazon Product Listing">
								<form string="Product Attribtes">
									<separator colspan="4" string="Product Listing" />
									<field name="amazon_prodlisting_ids"
										context="{'default_product_id': active_id,'new_lstn': True}" />
								</form>
							</page> -->
						</notebook>
					</page>
				</xpath>
				<xpath expr="//field[@name='purchase_ok']" position="after">
					<div class="oe_left" name="options">
						<div>
							<field name="amazon_product"/>
							<label for="amazon_product" />
							<field name="amazon_export" />
							<label for="amazon_export" />
						</div>
					</div>
				</xpath>
			</field>
		</record>
		<record id="view_amazon_product_listing_tree" model="ir.ui.view">
			<field name="name">amazon.product.listing</field>
			<field name="model">amazon.product.listing</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Product Amazon Listing">
					<field name="shop_id" />
					<field name="name" />
					<field name="new_lstn" invisible="1" />
					<field name="title" invisible="1" />
					<field name="default_code" />
					<field name="asin" />
					<field name="listing_id" invisible="1" />
					<field name="quantity" invisible="1" />
					<field name="currency_id" />
					<field name="price" invisible="1" />
				</tree>
			</field>
		</record>

		<record id="view_product_filter" model="ir.ui.view">
			<field name="name">product.product.list</field>
			<field name="model">product.product</field>
			<field name="inherit_id" ref="product.product_search_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='name']" position="after">
					<filter name="prime_group" string="Prime Product" domain="[('is_prime','=',True)]"/>
					<filter string="Exported Product" name="exported_product"
						domain="[('amazon_product','=',True),('updated_data','=',True)]" help="Product that has been Exported" />
						
					<filter string="Product To Exported" name="draft"
						domain="[('amazon_product','=',True),('updated_data','!=',True)]" help="Product that has to be Exported" />
				</xpath>
			</field>
		</record>
		<record id="view_amazon_product_listing_form" model="ir.ui.view">
			<field name="name">amazon.product.listing</field>
			<field name="model">amazon.product.listing</field>
			<field name="context" eval="{'default_new_lstn': True}" />
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Product Amazon Listing">

					<sheet>
						<group cols="4">
							<field name="shop_id"/>
							<field name="new_lstn" invisible="1" context="{'new_lstn': True}" />
							<field name="name" />
							<field name="title"/>
							<field name="default_code" />
							<field name="fulfillment_by" />
							<field name="asin"/>
							<field name="code_type"/>
							<field name="currency_id"/>
							<field name="price"/>
							<field name="quantity"/>
							<field name="amazon_condition" />
							<field name="condition"/>
							<field name="prod_dep"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>
